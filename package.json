{
  "name": "mt-downloader",
  "description": "resumable multi-threaded download over http/https",
  "author": {
    "name": "Tushar Mathur <tusharmath@gmail.com>",
    "url": "http://tusharm.com"
  },
  "bin": {
    "mtd": ".dist/bin/mtd.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tusharmath/Multi-threaded-downloader.git"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "babel src --out-dir .dist --source-maps true",
    "test": "ava",
    "lint": "standard --verbose | snazzy",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "doc": "jsdoc2md ./src/** --global-index-format grouped --template README.template.md > README.md"
  },
  "engines": {
    "node": ">= 5.0.0"
  },
  "main": ".dist/index.js",
  "dependencies": {
    "graceful-fs": "^4.1.11",
    "humanize-plus": "^1.8.1",
    "meow": "^3.7.0",
    "muxer": "^1.0.1",
    "progress": "^1.1.8",
    "ramda": "^0.22.1",
    "request": "^2.60.0",
    "rx": "^4.0.7",
    "valid-url": "^1.0.9"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^3.0.0",
    "ava": "^0.16.0",
    "babel-cli": "^6.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-register": "^6.11.5",
    "coveralls": "^2.11.9",
    "cz-conventional-changelog": "^1.1.5",
    "express": "^4.13.1",
    "ghooks": "^1.0.3",
    "jsdoc-to-markdown": "^1.3.6",
    "nyc": "^8.1.0",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.4",
    "snazzy": "^4.0.0",
    "standard": "^8.0.0",
    "validate-commit-msg": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "publishConfig": {
    "tag": "next"
  },
  "standard": {
    "ignore": [
      "test/integration/**"
    ]
  },
  "keywords": [
    "segmented",
    "file",
    "transfer",
    "protocol",
    "stop",
    "resume",
    "http",
    "download",
    "threads",
    "downloader",
    "multi-threaded",
    "manager"
  ],
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "ava": {
    "require": "babel-register"
  }
}
